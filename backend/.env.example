# App Configuration
APP_NAME=DTG Workflow Automations
VERSION=1.0.0
DEBUG=True

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dtg_workflows

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# AI APIs (Optional - add when ready to use AI features)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Google Cloud Document AI (Optional - enable when configured)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_LOCATION=us
GOOGLE_PROCESSOR_ID=your-processor-id

# Document Parsing Strategy Toggles
ENABLE_OPENAI_PARSING=true
ENABLE_DOCUMENT_AI_PARSING=false
ENABLE_CLAUDE_PARSING=true
ENABLE_TESSERACT_PARSING=true

# Claude Model Selection (use current models, not retired ones)
# Current models as of Jan 2026:
#   - claude-sonnet-4-5-20250929 (recommended, balanced performance)
#   - claude-opus-4-5-20251101 (most capable, higher cost)
# RETIRED models (will return 404 errors):
#   - claude-3-opus-20240229 (retired Jan 5, 2026)
#   - claude-3-5-sonnet-20241022 (retired)
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Image Quality Settings (for construction plans with microscopic detail)
# Higher DPI = more detail but larger files (tiling handles this)
# Keep quality high (90-95) to preserve fine details
DETAIL_SCAN_DPI=300
COARSE_SCAN_DPI=100

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Email Service
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=quotes@yourdomain.com
SENDGRID_FROM_NAME=DTG Workflow Automations
